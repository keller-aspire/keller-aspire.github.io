---
import { getCollection } from 'astro:content';
import { newsSetting } from '../../data/config';
import PaginatedNewsLayout from '../../components/news/PaginatedNewsLayout.astro';
export const prerender = true;

// Get static paths for all possible pages
export async function getStaticPaths() {
    const allPosts = await getCollection('news');

    // Filter posts
    const filteredPosts = allPosts.filter((post) => {
        return import.meta.env.DEV || post.data.publish !== false;
    });

    // Sort posts by date
    const sortedPosts = filteredPosts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

    const totalPosts = sortedPosts.length;
    const totalPages = Math.ceil(totalPosts / newsSetting.postsPerPage);

    // Create paths for all pages except page 1 (which is handled by index.astro)
    return Array.from({ length: totalPages - 1 }, (_, i) => {
        const page = i + 2; // Start from page 2
        const start = (page - 1) * newsSetting.postsPerPage;
        const end = start + newsSetting.postsPerPage;

        return {
            params: { page: String(page) },
            props: {
                page,
                totalPages,
                posts: sortedPosts.slice(start, end),
            },
        };
    });
}

const { page, totalPages, posts } = Astro.props;

// Redirect page 1 to the main news page
if (page === 1) {
    return Astro.redirect('/news');
}
---

<PaginatedNewsLayout
    {posts}
    currentPage={page}
    {totalPages}
    baseUrl="/news"
    title="News"
    subtitle="Latest articles and news from the team"
/>

