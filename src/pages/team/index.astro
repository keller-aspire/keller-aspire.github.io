---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';
import PI from '@components/sections/PI.astro';

const seoTitle = "Our Team";
const seoDescription = "Our team is made up of a diverse group of people who are passionate about building amazing websites with ease.";

const heroContent = {
    title: "Our Team",
    description: "Meet the people behind ASPIRE Lab.",
}

---

<Layout title={seoTitle} description={seoDescription}>
    <InnerHero content={heroContent}  />
    <PI padding="base" title="Principal Investigator" contentFile="team/stevekeller"/>
    <TeamGrid padding="base" category="Postdoc" title="Postdocs"/>
    <TeamGrid padding="base" category="Staff" title="Staff"/>
    <TeamGrid padding="base" category="PhD" title="PhD Students"/>
</Layout>